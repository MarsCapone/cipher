<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cipher" default="compile.module.cipher">
  <dirname property="module.cipher.basedir" file="${ant.file.module_cipher}"/>
  
  <property name="module.jdk.home.cipher" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cipher" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cipher" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cipher" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="cipher.output.dir" value="${module.cipher.basedir}/out/production/cipher"/>
  <property name="cipher.testoutput.dir" value="${module.cipher.basedir}/out/test/cipher"/>
  
  <path id="cipher.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cipher.module.production.classpath">
    <path refid="${module.jdk.classpath.cipher}"/>
    <path refid="library.commons-cli-1.2-javadoc.classpath"/>
    <path refid="library.commons-io-2.4-javadoc.classpath"/>
    <path refid="library.stringsearch-2.1.classpath"/>
  </path>
  
  <path id="cipher.runtime.production.module.classpath">
    <pathelement location="${cipher.output.dir}"/>
    <path refid="library.commons-cli-1.2-javadoc.classpath"/>
    <path refid="library.commons-io-2.4-javadoc.classpath"/>
    <path refid="library.stringsearch-2.1.classpath"/>
  </path>
  
  <path id="cipher.module.classpath">
    <path refid="${module.jdk.classpath.cipher}"/>
    <pathelement location="${cipher.output.dir}"/>
    <path refid="library.commons-cli-1.2-javadoc.classpath"/>
    <path refid="library.commons-io-2.4-javadoc.classpath"/>
    <path refid="library.stringsearch-2.1.classpath"/>
  </path>
  
  <path id="cipher.runtime.module.classpath">
    <pathelement location="${cipher.testoutput.dir}"/>
    <pathelement location="${cipher.output.dir}"/>
    <path refid="library.commons-cli-1.2-javadoc.classpath"/>
    <path refid="library.commons-io-2.4-javadoc.classpath"/>
    <path refid="library.stringsearch-2.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.cipher">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cipher">
    <patternset refid="excluded.from.module.cipher"/>
  </patternset>
  
  <path id="cipher.module.sourcepath">
    <dirset dir="${module.cipher.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cipher" depends="compile.module.cipher.production,compile.module.cipher.tests" description="Compile module cipher"/>
  
  <target name="compile.module.cipher.production" depends="register.custom.compilers" description="Compile module cipher; production classes">
    <mkdir dir="${cipher.output.dir}"/>
    <javac2 destdir="${cipher.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cipher}/javac">
      <compilerarg line="${compiler.args.cipher}"/>
      <bootclasspath refid="cipher.module.bootclasspath"/>
      <classpath refid="cipher.module.production.classpath"/>
      <src refid="cipher.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cipher"/>
    </javac2>
    
    <copy todir="${cipher.output.dir}">
      <fileset dir="${module.cipher.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cipher.tests" depends="register.custom.compilers,compile.module.cipher.production" description="compile module cipher; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cipher" description="cleanup module">
    <delete dir="${cipher.output.dir}"/>
    <delete dir="${cipher.testoutput.dir}"/>
  </target>
</project>